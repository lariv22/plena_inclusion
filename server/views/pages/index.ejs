        <h1>Registro de profesionales</h1>
        <form action="/addProfessional" method="post">
          <input type="text" placeholder="ID" name="id" value="" />
          <input
            type="text"
            placeholder="Nombre"
            name="nameUser"
            value=""
          /><br /><br />
          <input
            type="text"
            placeholder="Primer apellido"
            name="surname1"
            value=""
          /><br /><br />
          <input
            type="text"
            placeholder="Segundo apellido"
            name="surname2"
            value=""
          /><br /><br />
          <input
            type="text"
            placeholder="DNI"
            name="DNI"
            value=""
          /><br /><br />
          <input
            type="text"
            placeholder="Género"
            name="gender"
            value=""
          /><br /><br />
          <input
            type="text"
            placeholder="Número de móvil"
            name="phoneNumber"
            value=""
          /><br /><br />
          <input
            type="text"
